[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 100
poll-interval = 10
time-format = %-H:%M

format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a
;label-charging = %percentage%% +%time%

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}
label-discharging = %percentage%% -%time%

format-full-prefix = "Ôá¶ "
format-full-prefix-foreground = ${colors.foreground}
format-full-underline = ${self.format-charging-underline}
;label-full =

ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

[module/spotify]
type = custom/script
tail = false
format = <label>
format-foreground = ${colors.foreground}
format-underline = ${colors.spotify-green}
label = %output:0:45:...%
exec = /home/vintux/.config/polybar/mpris.sh
click-left = playerctl play-pause

[module/previous]
type              = custom/script
format-text       = <label>
label             = ÔÅä
exec              = echo label
click-left        = exec cmus-remote -r -p
click-right        = xdesktop -g 4
format-foreground = ${colors.foreground}
format-underline = ${colors.spotify-green}
format-padding    = 0

[module/next]
type              = custom/script
format-text       = <label>
label             = ÔÅé
exec              = echo label
click-left        = exec cmus-remote -n -p
click-right        = xdesktop -g 4
format-foreground = ${colors.foreground}
format-underline = ${colors.spotify-green}
format-padding    = 0

[module/playpause]
type              = custom/script
exec              = ~/.config/polybar/playpause.sh
interval = 1
click-left        = cmus-remote -u
click-right       = xdesktop -g 4
format-foreground = ${colors.foreground}
format-underline = ${colors.spotify-green}
format-padding = 0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 0

